<h1>New Book</h1>

<%= form_for :book, url: books_path do |b| %>
  <p>
    <%= b.label :title %><br>
    <%= b.text_field :title %>
  </p>

  <p>
    <%= b.label :author %><br>
    <%= b.text_field :author %>
  </p>

  <p>
    <%= b.label :description %><br>
    <%= b.text_area :description %>
  </p>

  <p>
    <%= b.label :url %><br>
    <%= b.text_field :url %>
  </p>

  <p>
    <%= b.submit %>
  </p>
<% end %>
